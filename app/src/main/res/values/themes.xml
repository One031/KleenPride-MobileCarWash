<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.KleenPride" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Remove action bar and use a pure black background -->
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="Theme.KleenPride" parent="Base.Theme.KleenPride" />

    <style name="Theme.KleenPride.Splash" parent="Theme.SplashScreen">
        <!-- Black background -->
        <item name="windowSplashScreenBackground">@android:color/black</item>

        <!-- Your logo icon -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo</item>

        <!-- Duration (optional, default handled by system) -->
        <item name="windowSplashScreenAnimationDuration">500</item>

        <!-- The theme to switch to after splash -->
        <item name="postSplashScreenTheme">@style/Theme.KleenPride</item>
    </style>

</resources>